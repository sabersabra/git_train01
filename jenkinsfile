pipeline {
    agent any
    environment {
        imageName = "sabersabra/hello-nginx"
    }
    stages {
        stage("Prepare"){
            steps {
                echo "Hello World"
            }
        
        }
        stage("Check version"){
            steps {
                sh "docker --version"
            }
        }
        stage("deploy"){
            steps {
                sshagent (credentials: ['uat-server']) {
                    sh "ssh core@167.99.237.229 -k docker pull ${env.imageName}"
                }
            }
        }
        //stage("push image"){
            //steps {
                // sh "docker login -u sabersabra -p Orlion@11"
                // sh "docker push ${env.imageName}"
            //}
       // }
    }
}