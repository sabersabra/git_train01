pipeline {
    stages {
        stage("Prepare"){
            steps {
                echo "Hello World"
            }
        
        }
        stage("Check version"){
            steps {
                sh "docker --version"
            }
        }
        stage("Build Image"){
            steps {
                sh "docker build -t hello-nginx"
            }
        }
        stage("Time Stamp"){
            echo "${currentBuild}"
        }
    }
}