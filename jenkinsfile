pipeline {
    agent any
    environment {
        imageName = "sabersabra/hello-nginx"
    }
    stages {
        stage("Prepare"){
            steps {
                echo "Hello World"
            }
        
        }
        stage("Check version"){
            steps {
                sh "docker --version"
            }
        }
        stage("deploy"){
            steps {
                sshagent ("uat-server") {
                    sh "ssh core@167.99.237.229 docker pull ${env.imageName}"
                }

            }
        }
    }
}